<UserControl x:Class="demo.wsclient.WSServiceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <WrapPanel Orientation="Vertical">
            <Border Grid.Row="0" Background="DarkGray" CornerRadius="5" Margin="4 4 4 0" Padding="5" BorderThickness="1" BorderBrush="Black" >
                <WrapPanel Orientation="Vertical">
                    <Label >HUB Events</Label>
                    <WrapPanel x:Name="_uiWrapPanelHubs" Orientation="Vertical"/>
                </WrapPanel>
            </Border>

            <Border Grid.Row="0" Background="DarkGray" CornerRadius="5" Margin="4 4 4 0" Padding="5" BorderThickness="1" BorderBrush="Black" >
                <WrapPanel Orientation="Vertical">
                    <Label >REST Methods</Label>
                    <WrapPanel x:Name="_uiWrapPanelRests" Orientation="Vertical"/>
                </WrapPanel>
            </Border>
        </WrapPanel>
    </ScrollViewer>
</UserControl>
